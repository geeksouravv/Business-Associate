<link href="~/css/profilestylesheet.css" rel="stylesheet" />

<div class="profile-container">
    <h2>User Profile</h2>

    <!-- Profile Photo -->
    <div class="profile-photo">
        <img id="profilePic" src="https://via.placeholder.com/120" alt="Profile Photo">
        <br>
        <label for="photoUpload" class="upload-btn">Upload Photo</label>
        <input type="file" id="photoUpload" accept="image/*" onchange="previewImage(event)">
    </div>

    <!-- Profile Form -->
    <form class="profile-form">
        <div class="form-group">
            <label for="role">Role (Admin/Customer)</label>
            <input type="text" id="role" placeholder="Admin or Customer">
        </div>

        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" placeholder="Enter Full Name">
        </div>

        <div class="form-group">
            <label for="phone">Phone No</label>
            <input type="text" id="phone" placeholder="Enter Phone Number">
        </div>

        <div class="form-group">
            <label for="email">Gmail</label>
            <input type="email" id="email" placeholder="Enter Gmail">
        </div>

        <div class="form-group full-width">
            <label for="permanent">Permanent Address</label>
            <input type="text" id="permanent" placeholder="Enter Permanent Address">
        </div>

        <div class="form-group">
            <label for="aadhaar">Aadhar No</label>
            <input type="text" id="aadhaar" placeholder="Enter Aadhar Number">
        </div>

        <div class="form-group">
            <label for="pan">PAN No</label>
            <input type="text" id="pan" placeholder="Enter PAN Number">
        </div>

        <div class="form-group full-width">
            <label for="office">Office Address</label>
            <input type="text" id="office" placeholder="Enter Office Address">
        </div>

        <div class="form-group full-width">
            <label for="password">Change Password</label>
            <input type="password" id="password" placeholder="Enter New Password">
        </div>
    </form>

    <!-- Buttons -->
    <div class="btn-container">
        <button type="submit" class="btn">Save</button>
        <button type="reset" class="btn btn-danger">Cancel</button>
    </div>
</div>

<script>
    function previewImage(event) {
      const reader = new FileReader();
      reader.onload = function(){
        document.getElementById('profilePic').src = reader.result;
      }
      reader.readAsDataURL(event.target.files[0]);
    }
</script>